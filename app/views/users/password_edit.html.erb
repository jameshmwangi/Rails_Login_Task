<h1>Password Change page</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, url: password_update_user_path(@user), local: true, method: :patch) do |f| %>
  <div class="field">
    <%= f.label :current_password, "Original password:" %>
    <%= f.password_field :current_password %>
  </div>

  <div class="field">
    <%= f.label :password, "New Password:" %>
    <%= f.password_field :password %>
    <ul style="font-size: 0.9em; color: #666; margin-top: 5px;">
      <li>Passwords cannot be similar to your other personal information.</li>
      <li>Password must be at least 8 characters long.</li>
      <li>It cannot be a commonly used password.</li>
      <li>The password cannot contain only numbers.</li>
    </ul>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password (for confirmation):" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Change" %>
  </div>
<% end %>

<%= link_to "Back", user_path(@user) %>
