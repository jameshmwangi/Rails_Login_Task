<h1>Member Registration Page</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div class="field">
    <%= f.label :username, "username" %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email, "Email address" %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :age, "age" %>
    <%= f.number_field :age %>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
    <ul style="font-size: 0.9em; color: #666; margin-top: 5px;">
      <li>Passwords cannot be similar to your other personal information.</li>
      <li>Password must be at least 8 characters long.</li>
      <li>It cannot be a commonly used password.</li>
      <li>The password cannot contain only numbers.</li>
    </ul>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Password (for confirmation)" %>
    <%= f.password_field :password_confirmation %>
    <span style="font-size: 0.9em; color: #666;">Please enter the password again for confirmation.</span>
  </div>

  <div class="actions">
    <%= f.submit "register" %>
  </div>
<% end %>
